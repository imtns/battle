.navbar {
	width: 100%;
	overflow: hidden;
	position: relative;
	top: 0;
	left: 0;
	z-index: 10;
}

.navbar-title-1 {
	width: 100%;
	height: 46px;
	line-height: 46px;
	text-align: center;
	position: absolute;
	bottom: 0;
	left: 0;
	z-index: 10;
	background-color: #fff;
	color: #333;
	font-size: 30rpx;
	display:flex;
	justify-content: center;
}
.navbar-title-1 .tab{
	margin:0 10rpx;
}
.underline {
	position: absolute;
	left: 320rpx;
	bottom: 15rpx;
	width: 40rpx;
	height: 4rpx;
	background: #4092CB;
	transition: left .3s ease-in;
	will-change: left;
}

.navbar-action-wrap {
	position: absolute;
	left: 10px;
	bottom: 7px;
	z-index: 100;
	line-height: 46rpx;
	height: 46rpx;
}

.navbar-action-group {
	border: 1px solid #e8e8e8;
	border-radius: 20px;
	overflow: hidden
}

.navbar-action_item {
	padding: 3px 0;
	color: #333;
}

.navbar-action-group .navbar-action_item {
	border-right: 1px solid #e8e8e8;
	padding: 3px 12px;
}
