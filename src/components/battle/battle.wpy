<script>
import wepy from 'wepy';
import { BATTLE, BATTLE_COMMIT, DAILY_REPORT } from '@/utils/url';
import { get, post } from '@/utils/request';
import { Event } from '@/utils/event.js';
// import { sleep } from '@/utils';
import empty from '@/components/empty';
import imageLoader from './imageLoader';
import tutorial from './tutorial';
let emptyData = false;
export default class Battle extends wepy.component {
    data = {
        tutorialShow: false,
        loading: true,
        loaded: false,
        topLikedImage: '',
        bottomLikedImage: '',
        topLikedUser: '',
        bottomLikedUser: '',
        topIndex: 0,
        bottomIndex: 0,
        topHeart: '',
        bottomHeart: '',
        battle: {
            a: [],
            b: []
        },
        loadedBattle: {
            a: [],
            b: []
        },
        heartShow: false,
        heartTop: false,
        heartBottom: false,
        likeCount: {
            count: {}
        },
        animationData: {},
        removeOutter: true,
        popType: '',
        popValue: '',
        pop: false,
        gift: false,
        layer: false,
        isphoneX: false,
        daily: {}
    };

    components = {
        empty,
        tutorial,
        imageLoader
    };

    methods = {
        getLoadedImage(data) {
            if (data.from === 'a') {
                this.loadedBattle.a.push(data);
            } else {
                this.loadedBattle.b.push(data);
            }
            if (this.loadedBattle.a.length > this.battle.a.length - 3 && this.loadedBattle.b.length > this.battle.b.length - 3) {
                this.loadingFinish();
            }
            this.$apply();
        },
        displayPage(hide) {
            console.log(hide);
            if (hide) {
                this.loading = true;
                this.removeOutter = true;
                setTimeout(() => {
                    this.loading = false;
                    this.$apply();
                }, 1000);
            }
        },
        closeTutorial() {
            this.tutorialShow = false;
            wepy.setStorageSync('tutorial', true);
            this.$apply();
        },
        closeLayer() {
            this.layer = false;
            this.$apply();
        },
        animationEnd() {
            this.removeOutter = false;
            this.$apply();
        },
        async fly(position, index, imageid, that, event) {
            console.error(position);
            // eslint-disable-next-line one-var
            var notLikeImageId = '',
                likedImageId = '',
                likedUserId = '';
            let o = position === 'bottom' ? this.loadedBattle.a : this.loadedBattle.b;
            let k = position === 'bottom' ? this.battle.a : this.battle.b;
            this.animation.translateX('-110%').step();
            o[o.length - 1].animation = this.animation.export();
            setTimeout(async () => {
                o.splice(o.length - 1, 1);
                k.splice(k.length - 1, 1);
                if (this.loadedBattle.a.length <= 1) {
                    try {
                        await this.getBattle('a');
                    } catch (e) {
                        emptyData = true;
                    }
                }
                if (this.loadedBattle.b.length <= 1) {
                    try {
                        await this.getBattle('b');
                    } catch (e) {
                        emptyData = true;
                    }
                }
            }, 600);
            if (position === 'bottom') {
                this.bottomLikedImage = likedImageId = this.loadedBattle.b[index]
                    .image_id;
                this.bottomLikedUser = likedUserId = this.loadedBattle.b[index]._id;
                notLikeImageId = this.loadedBattle.a[this.loadedBattle.a.length - 1]
                    .image_id;
            } else {
                this.topLikedImage = likedImageId = this.loadedBattle.a[index]
                    .image_id;
                this.topLikedUser = likedUserId = this.loadedBattle.a[index]._id;
                notLikeImageId = this.loadedBattle.b[this.loadedBattle.b.length - 1]
                    .image_id;
            }
            this.flyHeart(position, imageid);
            this.battleCommit(likedImageId, notLikeImageId);
            if (this.likeCount.count[likedImageId] === 2) {
                setTimeout(() => {
                    this.likeCount.count = {};
                    this.setHeart('top', 1);
                    this.setHeart('bottom', 1);
                    wepy.navigateTo({
                        url: `battle/profile?id=${likedUserId}&index=${index}&position=${
                            position === 'bottom' ? 'top' : 'bottom'
                        }`
                    });
                }, 600);
            }
            this.handleEmpty();
        }
    };
    handleEmpty() {
        // console.error(empty);
        if (emptyData) {
            setTimeout(async () => {
                emptyData = false;
                this.loadedBattle.a = [];
                this.loadedBattle.b = [];
                this.$apply();
                await this.getBattle();
                this.topIndex = 0;
                this.bottomIndex = 0;
                this.$apply();
            }, 200);
        }
    }
    async battleCommit(likedImageId, notLikeImageId) {
        try {
            const data = await post(BATTLE_COMMIT, {
                result: {
                    win: likedImageId,
                    fail: notLikeImageId
                }
            });

            // setTimeout(() => {
            //     if (Object.keys(data).length) {
            //         this.popType = Object.keys(data);
            //         this.popValue = Object.values(data);
            //         this.pop = true;
            //         this.layer = true;
            //         this.$apply();
            //     }
            // }, 1000);
        } catch (e) {}
    }
    flyHeart(type) {
        this.heartShow = true;
        var imageid = '';
        if (type === 'bottom') {
            this.heartBottom = true;
            imageid = this.bottomLikedImage;
        } else {
            this.heartTop = true;
            imageid = this.topLikedImage;
        }
        console.error(imageid);
        if (!this.likeCount.count[imageid]) this.likeCount.count[imageid] = 0;
        this.likeCount.count[imageid] = this.likeCount.count[imageid] + 1;
        this.setHeart(type, this.likeCount.count[imageid]);
        setTimeout(() => {
            this.heartTop = false;
            this.heartBottom = false;
            this.heartShow = false;
            this.$apply();
        }, 700);
    }
    delay() {
        return new Promise(function(resolve, reject) {
            setTimeout(resolve.bind(null, 10), 300);
        });
    }

    events = {};

    watch = {};

    computed = {};
    getBattle(position = '') {
        this.loading = true;
        this.removeOutter = true;
        return new Promise(async (resolve, reject) => {
            const result = await get(BATTLE, {
                battle: position
            });
            if (
                (position === 'a' && !result.a.length) ||
                (position === 'b' && !result.b.length)
            ) {
                // eslint-disable-next-line prefer-promise-reject-errors
                reject('empty');
                return;
            }
            if (!position || position === 'a') {
                result.a.forEach(item => {
                    item.distance = (item.distance / 1000).toFixed(2);
                    item.animation = {};
                });
                this.battle.a.push(...result.a);
            }
            if (!position || position === 'b') {
                result.b.forEach(item => {
                    item.distance = (item.distance / 1000).toFixed(2);
                    item.animation = {};
                });
                this.battle.b.push(...result.b);
            }
            Event.trigger('imageLoader', this.battle);
            resolve();
        });
    }
    loadingFinish() {
        setTimeout(() => {
            this.loading = false;
            this.$apply();
        }, 500);
        this.$apply();
    }
    async onLoad() {
        var that = this;
        console.log(this.$parent.globalData);
        wx.getSystemInfo({
            success(res) {
                var name = 'iPhone X';
                if (res.model.indexOf(name) > -1) {
                    that.isphoneX = true;
                }
            }
        });
        Event.listen('battleFresh', () => {
            this.loadedBattle.a = [];
            this.battle.a = [];
            this.loadedBattle.b = [];
            this.babble.b = [];
            this.$apply();
            this.getBattle();
            this.$apply();
        });
        Event.listen('changeBattle', async (index, position) => {
            let o = position === 'top' ? this.loadedBattle.b : this.loadedBattle.a;
            let k = position === 'top' ? this.battle.b : this.battle.a;
            setTimeout(() => {
                this.animation.translateX('-110%').step();
                o[o.length - 1].animation = this.animation.export();
                setTimeout(() => {
                    o.splice(o.length - 1, 1);
                    k.splice(k.length - 1, 1);
                }, 600);
                this.$apply();
            }, 600);
        });
        this.animation = wx.createAnimation({
            duration: 300,
            timingFunction: 'ease-in-out'
        });
        await this.getBattle();
        this.loaded = true;
        this.topLikedImage = this.loadedBattle.a[this.loadedBattle.a.length - 1].image_id;
        this.topLikedUser = this.loadedBattle.a[this.loadedBattle.a.length - 1]._id;

        this.bottomLikedImage = this.loadedBattle.b[
            this.loadedBattle.b.length - 1
        ].image_id;
        this.bottomLikedUser = this.loadedBattle.b[this.loadedBattle.b.length - 1]._id;

        this.$apply();
        // if (!wepy.getStorageSync('isNew')) {
        //     try {
        //         await dialog({
        //             message:
        //                 '您是第一次使用颜狗小程序,需要了解一下颜狗的使用介绍么?',
        //             confirmButtonText: '去看看',
        //             showCancelButton: true,
        //             cancelButtonText: '不用了'
        //         });
        //         console.log('1');
        //     } catch (e) {
        //         console.log(2);
        //     }
        // }
        if (!wepy.getStorageSync('tutorial')) {
            this.tutorialShow = true;
        }
        const report = await get(DAILY_REPORT);
        this.daily = report;
        this.daily.up = this.toFixed(report.up, 3) * 100;
        setTimeout(() => {
            if (this.daily.up) {
                this.layer = true;
                this.$apply();
            }
        }, 1000);
    }
    toFixed(num, fixed) {
        var re = new RegExp('^-?\\d+(?:\.\\d{0,' + (fixed || -1) + '})?');
        return num.toString().match(re)[0];
    }
    setHeart(position, index) {
        if (index === 2) {
            index = 3;
        }
        if (position === 'top') {
            this.topHeart = `https://images.facedog.cn/public/battle/${index}.png`;
        } else {
            this.bottomHeart = `https://images.facedog.cn/public/battle/${index}.png`;
        }
        this.$apply();
    }
    onShow() {}
}
</script>

