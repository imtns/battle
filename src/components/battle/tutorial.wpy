<script>
  import wepy from 'wepy';
  export default class Turorial extends wepy.component {
      props = {};

      data = {
          step1: true,
          step2: false
      };

      components = {};

      methods = {
          show(num) {
              if (num == 1) {
                  this.step2 = true;
                  this.step1 = false;
              } else {
                  this.$emit('closeTutorial');
              }
          }
      };

      events = {};

      watch = {};

      computed = {};

      onLoad() { };

      onShow() { };
  }
</script>

